

<div class="container m-5">
    <form action="/admin" method="post">
        <div class="mb-3">
            <div class="text-center">
            <h3 class="text center">Insert admin credentials</h3>
            <hr>
            </div>
            <label for="mailAdmin" class="form-label">Mail Admin</label>
            <input type="mail" class="form-control" id="mailAdmin" name="mailAdmin" autofocus="autofocus" required>
            
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
        </div>
        <div class="mb-3 text-center">
            <button type="submit" class="btn btn-success w-75">Submit</button>
        </div>
    </form>
</div>