<div class="container text-center m-5 fondo">
    <hr>
    <h1>
        Add Style
    </h1>
    <hr>
</div>

<div class="container m-5">
    <form action="/add" method="post">
        <div class="mb-3">
            <label for="nameStyle" class="form-label">Style</label>
            <input type="text" class="form-control" id="nameStyle" name="nameStyle" required>
        </div>
        <div class="mb-3">
            <label for="ibusStyle" class="form-label">IBUS</label>
            <input type="number" class="form-control" id="ibusStyle" name="ibusStyle" required>
        </div>
        <div class="mb-3">
            <label for="descriptionStyle" class="form-label">Description</label>
            <input type="text" class="form-control" id="descriptionStyle" name="descriptionStyle" required>
        </div>
        <div class="mb-3 text-center">
            <button type="submit" class="btn btn-primary w-75">Add</button>
        </div>
    </form>
</div>



